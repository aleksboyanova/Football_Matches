<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".activities.UpdateMatchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/updateMatchCardView1"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/updateMatchText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="Update Match:"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="italic" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputDate"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/dateEditText"
                            style="@style/modifiedEditText"
                            android:drawableLeft="@drawable/calendar"
                            android:drawablePadding="15dp"
                            android:ems="10"
                            android:hint="Date" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPlace"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/placeEditText"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/place"
                        android:drawablePadding="15dp"
                        android:hint="Place"
                        android:inputType="textPersonName"
                        android:maxLines="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputHour"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/hourEditText"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/time"
                        android:drawablePadding="15dp"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Hour" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputScore"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/scoreEditText"
                            style="@style/modifiedEditText"
                            android:drawableLeft="@drawable/scoreboard"
                            android:drawablePadding="15dp"
                            android:hint="Score"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/winnerIdText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dip"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/winner"
                        android:drawablePadding="15dp"
                        android:text="Winner:" />

                    <!-- Spinner Element -->
                    <Spinner
                        android:id="@+id/spinnerWinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/refereeIdText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dip"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/referee9"
                        android:drawablePadding="15dp"
                        android:text="Referee:" />

                    <!-- Spinner Element -->
                    <Spinner
                        android:id="@+id/spinnerReferee"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputMatchId"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                    </com.google.android.material.textfield.TextInputLayout>

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/updateBtn"
                        style="@style/loginButton"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="Update"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="false"
        android:onClick="onMatchesResultsClick"
        android:src="@drawable/ic_back_img"
        tools:ignore="OnClick" />
</RelativeLayout>